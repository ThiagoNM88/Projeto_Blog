<h1 align="center">Listing all articles</h1>

<%= render 'shared/article', obj: @articles %>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if @articles.previous_page %>
      <li class="page-item">
        <%= link_to "Previous", articles_path(page: @articles.previous_page), class: "page-link" %>
      </li>
    <% end %>

    <% if @articles.next_page %>
      <li class="page-item">
        <%= link_to "Next", articles_path(page: @articles.next_page), class: "page-link" %>
      </li>
    <% end %>

    <% (1..@articles.total_pages).each do |page| %>
      <% if @articles.current_page == page %>
        <li class="page-item active">
          <%= link_to page, articles_path(page: page), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item">
          <%= link_to page, articles_path(page: page), class: "page-link" %>
        </li>
      <% end %>
    <% end %>
  </ul>
</nav>