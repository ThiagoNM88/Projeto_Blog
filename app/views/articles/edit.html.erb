<h1>Edit Article</h1>

<%= form_with(model: @article, local: true, html: {class: "form"}) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<p>
  <div class="field">
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </div>
</p>
<p>
  <div class="field">
    <%= f.label :description %>
    <br>
     <%= f.text_area :description %>
  </div>
</p>
<p>
  <div class="actions" class="actions">
    <%= f.submit "Create Article", data: { turbo: false } %>
  </div>
<% end %>
</p>

<%# Adicione isso para criar um frame %>
